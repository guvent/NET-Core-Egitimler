@model ShippingDetailsViewModel

@{
    ViewData["Title"] = "Complete";
}

<h1>Sipariş</h1>
<hr />

<form asp-controller="Cart" asp-action="Complete" method="post">
    <div class="form-group">
        <label asp-for="ShippingDetail.FirstName">Adı</label>
        <input asp-for="ShippingDetail.FirstName" class="form-control" placeholder="Müşterinin adı" />
        <span class="text-danger" asp-validation-for="ShippingDetail.FirstName"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShippingDetail.LastName">Soyadı</label>
        <input asp-for="ShippingDetail.LastName" class="form-control" placeholder="Müşterinin soyadı" />
        <span class="text-danger" asp-validation-for="ShippingDetail.LastName"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShippingDetail.Email">E Posta</label>
        <input asp-for="ShippingDetail.Email" class="form-control" placeholder="Müşterinin eposta adresi" />
        <span class="text-danger" asp-validation-for="ShippingDetail.Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShippingDetail.City">Şehir</label>
        <input asp-for="ShippingDetail.City" class="form-control" placeholder="Müşterinin bulunduğu şehir" />
        <span class="text-danger" asp-validation-for="ShippingDetail.City"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShippingDetail.Address">Adresi</label>
        <input asp-for="ShippingDetail.Address" class="form-control" placeholder="Müşterinin adresi" />
        <span class="text-danger" asp-validation-for="ShippingDetail.Address"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShippingDetail.Age">Yaşı</label>
        <input asp-for="ShippingDetail.Age" class="form-control" placeholder="Müşterinin yaşı" />
        <span class="text-danger" asp-validation-for="ShippingDetail.Age"></span>
    </div>
    <button type="submit" class="btn btn-success">Tamamla</button>
</form>
